<?xml version="1.0" encoding="UTF-8"?>
<script>
	<binding fileName="modules/website/persistentdocument/import/website_binding.xml" />

	<website label="Site web par défaut" label-en="Default website"
			protocol="http" localizebypath="true" template="tplTwo"
			byTag="default_modules_website_default-website">
		<page label="Page d'accueil" label-en="Homepage" isHomePage="true"
			template="tplOne" id="homepage">
			<changecontent for="content-block">
				<changeblock type="richtext">
					<![CDATA[<h2>Bienvenue</h2><p>...</p>]]>
				</changeblock>
			</changecontent>
			<changecontent for="content-block" lang="en">
				<changeblock type="richtext">
					<![CDATA[<h2>Welcome</h2><p>...</p>]]>
				</changeblock>
			</changecontent>
		</page>

		<topic label="Outils" label-en="Tools" navigationVisibility="hidden" navigationVisibility-en="hidden">
			<page label="Imprimer" label-en="Print" indexingstatus="false"
				byTag="contextual_website_website_print">
				<documenturl lang="fr" url="/imprimer" />
				<documenturl lang="en" url="/print" />
				<changecontent for="content-block">
					<changeblock type="richtext">
						<![CDATA[<p>Ici vos instructions pour imprimer une page. (Cette page n'est utilisée que lorsque javascript n'est pas activé)</p>]]>
					</changeblock>
				</changecontent>
				<changecontent for="content-block" lang="en">
					<changeblock type="richtext">
						<![CDATA[<p>Some text explaining how to print a page. (This page is only used when javascript is disabled).</p>]]>
					</changeblock>
				</changecontent>
			</page>
			<page label="Ajouter aux favoris" label-en="Add to favorites" indexingstatus="false" navigationVisibility="hidden" navigationVisibility-en="hidden"
				byTag="contextual_website_website_favorite">
				<documenturl lang="fr" url="/ajouter-aux-favoris" />
				<documenturl lang="en" url="/add-to-favorites" />
				<changecontent for="content-block">
					<changeblock type="richtext">
						<![CDATA[<p>Ici vos instructions pour ajouter une page aux favoris. (Cette page n'est utilisée que lorsque javascript n'est pas activé)</p>]]>
					</changeblock>
				</changecontent>
				<changecontent for="content-block" lang="en">
					<changeblock type="richtext">
						<![CDATA[<p>Some text explaining how to add a page to favorites. (This page is only used when javascript is disabled).</p>]]>
					</changeblock>
				</changecontent>
			</page>
			<page label="Plan du site" id="sitemap" label-en="Site map" indexingstatus="false">
				<changecontent for="content-block">
					<changeblock type="richtext">
						<![CDATA[<h2 class="heading-two">Plan du site</h2><p>Pour mieux vous orienter, voici un plan du site.<br/>Les rubriques disponibles sont les suivantes :</p>]]>
					</changeblock>
					<changeblock type="modules_website_sitemap" />
				</changecontent>
				<changecontent for="content-block" lang="en">
					<changeblock type="richtext">
						<![CDATA[<h2 class="heading-two">Site Map</h2><p>Here is a site map to help you navigate through it</p>]]>
					</changeblock>
					<changeblock type="modules_website_sitemap" />
				</changecontent>
			</page>
			<page label="Mentions légales" id="legal" label-en="Legal notice"
				byTag="contextual_website_website_legal">
				<documenturl lang="fr" url="/mentions-legales" />
				<documenturl lang="en" url="/legal-notice" />
				<changecontent for="content-block">
					<changeblock type="richtext">
						<![CDATA[<p>Ici vos mentions légales.</p>]]>
					</changeblock>
				</changecontent>
				<changecontent for="content-block" lang="en">
					<changeblock type="richtext">
						<![CDATA[<p>Some text about law and obligations.</p>]]>
					</changeblock>
				</changecontent>
			</page>
			<page label="aide" indexingstatus="false" id="help" label-en="Help"
				byTag="contextual_website_website_help">
				<documenturl lang="fr" url="/aide" />
				<documenturl lang="en" url="/help" />
				<changecontent for="content-block">
					<changeblock type="richtext">
						<![CDATA[<p>Ici votre texte aidant un visiteur à s'orienter dans votre site.</p>]]>
					</changeblock>
				</changecontent>
				<changecontent for="content-block" lang="en">
					<changeblock type="richtext">
						<![CDATA[<p>Some text to help people navigate through your website.</p>]]>
					</changeblock>
				</changecontent>
			</page>
			<page label="Résultat de recherche" label-en="Search résults" indexingstatus="false" navigationVisibility="hidden" navigationVisibility-en="hidden"
				byTag="contextual_website_website_modules_solrsearch_page-results">
			    <changecontent for="content-block">
			    	<changeblock type="modules_solrsearch_results" />
				</changecontent>
				<changecontent for="content-block" lang="en">
			    	<changeblock type="modules_solrsearch_results" />
				</changecontent>
			</page>
		</topic>

		<topic label="Système" label-en="System" navigationVisibility="hidden" navigationVisibility-en="hidden">
			<page label="Page non trouvée (404)" label-en="Page not found (404)" indexingstatus="false" navigationVisibility="hidden" navigationVisibility-en="hidden"
				byTag="contextual_website_website_error404">
				<changecontent for="content-block">
				   <changeblock type="richtext">
					 <![CDATA[<h2>Page non trouvée (Erreur 404)</h2><p>La page demandée n'existe pas.<br/><a href="/">Retour à l'accueil</a>.</p>]]>
				   </changeblock>
				</changecontent>
				<changecontent for="content-block" lang="en">
				   <changeblock type="richtext">
					 <![CDATA[<h2>Page not found (404 error code)</h2><p>The request page does not exists.<br/><a href="/">Back to home page</a>.</p>]]>
				   </changeblock>
				</changecontent>
			</page>
			<page label="Erreur générale (500)" label-en="Internal server error" indexingstatus="false" navigationVisibility="hidden" navigationVisibility-en="hidden"
				byTag="contextual_website_website_server-error">
				<changecontent for="content-block">
				   <changeblock type="richtext">
					 <![CDATA[<h2>Erreur serveur</h2>]]>
				   </changeblock>
				   <changeblock type="modules_website_exception" />
				</changecontent>
				<changecontent for="content-block" lang="en">
				   <changeblock type="richtext">
					 <![CDATA[<h2>Internal server error</h2>]]>
				   </changeblock>
				   <changeblock type="modules_website_exception" />
				</changecontent>
			</page>
			<page label="Accès restreint (401.1)" label-en="Restricted area (401.1)" indexingstatus="false" navigationVisibility="hidden" navigationVisibility-en="hidden"
				byTag="contextual_website_website_error401-1">
				<changecontent for="content-block">
				   <changeblock type="richtext">
					 <![CDATA[<h2>Cette page est protégée d'accès</h2><p>Veuillez vous identifier en utilisant le formulaire ci-dessous.</p>]]>
				   </changeblock>
				   <changeblock type="modules_users_authentication" />
				</changecontent>
				<changecontent for="content-block" lang="en">
				   <changeblock type="richtext">
					 <![CDATA[<h2>This is a restricted area</h2><p>Please log in using the following form.</p>]]>
				   </changeblock>
				   <changeblock type="modules_users_authentication" />
				</changecontent>
			</page>
			<page label="Edition front-office" label-en="Frontoffice edition" indexingstatus="false" navigationVisibility="hidden" navigationVisibility-en="hidden"
				byTag="contextual_website_website_modules_website_edit" template="tplOne">
				<changecontent for="content-block">
				   <changeblock type="modules_website_edit" />
				</changecontent>
				<changecontent for="content-block" lang="en">
				   <changeblock type="modules_website_edit" />
				</changecontent>
			</page>
		</topic>

		<menus>
			<menu label="Menu d'accès rapide" byTag="contextual_website_website_menu-quicklinks">
				<menuitemfunction label="aller au contenu" label-en="go to content" url="#content" />
				<menuitemfunction label="aller au menu principal" label-en="go to main menu" url="#mainMenu" />
				<menuitempage pageid="help" />
			</menu>
			
			<menu label="Menu en haut de page"
				 byTag="contextual_website_website_menu-header">
				<menuitemfunction label="Imprimer" function="print" label-en="Print" />
				<menuitemfunction label="Ajouter aux favoris" label-en="Add to favorites"
					function="AddToFavorite" />
				<menuitempage pageid="sitemap" />
			</menu>

			<menu label="Menu principal"
				byTag="contextual_website_website_menu-main">
				<menuitempage pageid="homepage" />
			</menu>

			<menu label="Menu en bas de page"
				byTag="contextual_website_website_menu-footer">
				<menuitempage pageid="homepage" />
				<menuitempage pageid="legal" />
				<menuitempage pageid="sitemap" />
			</menu>
			
			<menu label="Menu copyright" byTag="contextual_website_website_menu-copyright" />
		</menus>
	</website>
</script>
