<?xml version="1.0"?>
<panel>	
	<section name="properties" linkedtab="properties"
		labeli18n="m.uixul.bo.doceditor.section.properties" 
		image="{IconsBase}/small/edit-properties.png">
		<property name="label" labeli18n="m.uixul.bo.doceditor.property.label" />
		<property name="author" labeli18n="m.uixul.bo.doceditor.property.author" />
		<property name="creationdate" labeli18n="m.uixul.bo.doceditor.property.creationdate" />
	</section>
	
	<section name="content" 
		labeli18n="m.uixul.bo.doceditor.section.content" 
		image="{IconsBase}/small/page-content.png">
		<property name="pagecomposition" labeli18n="m.website.bo.doceditor.property.page-composition" />
		<property name="freecontent" labeli18n="m.website.bo.doceditor.property.free-content" />
	</section>
										
	<section name="publication" linkedtab="publication" labeli18n="m.uixul.bo.doceditor.section.publication" 
		image="{IconsBase}/small/status.png">
		<property name="status" labeli18n="m.uixul.bo.doceditor.property.status"/>
		<property name="workflow" labeli18n="m.uixul.bo.doceditor.property.workflow"/>
	</section>
	
	<section name="localization" linkedtab="localization" labeli18n="modules.uixul.bo.doceditor.section.Localization;" 
		image="{IconsBase}/small/translate.png">
		<property name="languages" type="langs" labeli18n="m.uixul.bo.doceditor.property.languages"/>
	</section>				
	
	<section name="history" linkedtab="history" actiontexti18n="m.uixul.bo.doceditor.section.action.view"
		labeli18n="m.uixul.bo.doceditor.section.history" 
		image="{IconsBase}/small/history.png">
		<property name="modificationdate" labeli18n="m.uixul.bo.doceditor.property.modificationdate"/>
	</section>
					
	<section flex="1" name="urlrewriting" linkedtab="redirect"
		labeli18n="m.uixul.bo.doceditor.section.urlrewriting" 
		image="{IconsBase}/small/urlrewriting.png">
		<property name="currenturl" labeli18n="m.uixul.bo.doceditor.property.currenturl" class="link" />
	</section>	
	
	<section flex="1" name="tags" labeli18n="m.uixul.bo.doceditor.section.tags" 
		image="{IconsBase}/small/tags.png" viewempty="true">
		<property name="tags" class="action" type="openTags" labeli18n="m.uixul.bo.doceditor.property.tags" />
	</section>			
</panel>