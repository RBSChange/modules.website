<?xml version="1.0"?>
<panel>	
	<section name="properties" linkedtab="properties"
		labeli18n="modules.uixul.bo.doceditor.section.Properties" 
		image="{HttpHost}/icons/small/edit-properties.png">
		<property name="label" labeli18n="modules.uixul.bo.doceditor.property.Label" />
		<property name="author" labeli18n="modules.uixul.bo.doceditor.property.Author" />
		<property name="creationdate" labeli18n="modules.uixul.bo.doceditor.property.Creationdate" />
	</section>
	
	<section name="content" 
		labeli18n="modules.uixul.bo.doceditor.section.Content" 
		image="{HttpHost}/icons/small/page-content.png">		
		<property name="pagecomposition" class="action" type="editPageContent" labeli18n="modules.website.bo.doceditor.property.Page-composition" />
		<property name="freecontent" labeli18n="modules.website.bo.doceditor.property.Free-content" />
	</section>
										
	<section name="publication" linkedtab="publication"
		labeli18n="modules.uixul.bo.doceditor.section.Publication" 
		image="{HttpHost}/icons/small/status.png">
