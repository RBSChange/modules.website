	</section>
	
	<section name="localization" linkedtab="localization"
		labeli18n="modules.uixul.bo.doceditor.section.Localization" 
		image="{HttpHost}/icons/small/translate.png">
		<property name="languages" type="langs" labeli18n="modules.uixul.bo.doceditor.property.Languages"/>
	</section>				
	
	<section name="history" linkedtab="history" actiontexti18n="modules.uixul.bo.doceditor.section.action.View"
		labeli18n="modules.uixul.bo.doceditor.section.History" 
		image="{HttpHost}/icons/small/history.png">
		<property name="modificationdate" labeli18n="modules.uixul.bo.doceditor.property.Modificationdate"/>
	</section>
					
	<section flex="1" name="urlrewriting" labeli18n="modules.uixul.bo.doceditor.section.Urlrewriting" 
		image="{HttpHost}/icons/small/urlrewriting.png">
