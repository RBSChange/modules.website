<?xml version="1.0"?>
<perspective>
	<models>
		<model name="modules_generic/rootfolder">
			<children>
				<child model="modules_website/website"/>
				<child model="modules_generic/systemfolder"/>
			</children>
			<styles properties="toolbartype isHomePage isIndexPage visibility notindexable block"/>
			<columns>
				<column name="domain" label="Website-url" flex="2"/>
				<column name="modificationdate" label="Modificationdate" flex="1"/>
			</columns>
			<contextactions>
				<contextaction name="edit"/>
				<contextaction name="openTreeNodeOrder"/>
				<contextaction name="createWebsite"/>
			</contextactions>
		</model>
		<model name="modules_website/website">
			<children>
				<child model="modules_website/markerfolder"/>
				<child model="modules_website/menufolder"/>
				<child model="modules_website/page" />
				<child model="modules_website/pagegroup" />
				<child model="modules_website/topic" />
				<child model="modules_website/systemtopic" />
				<child model="modules_website/pageexternal" />
			</children>
			<drops>
				<drop model="modules_website/page" action="move"/>
				<drop model="modules_website/pagegroup" action="move"/>
				<drop model="modules_website/topic" action="move"/>
				<drop model="modules_website/pageexternal" action="move"/>
				<drop model="modules_website/menufolder" action="move"/>
				<drop model="modules_website/markerfolder" action="move"/>
			</drops>
			<styles properties="toolbartype isHomePage isIndexPage visibility notindexable block"/>
			<columns>
				<column name="modificationdate" label="Modificationdate" flex="1"/>
			</columns>
			<contextactions>
				<contextaction name="edit"/>
				<contextaction name="deactivated" />
				<contextaction name="reactivate" />
				<contextaction name="delete" />
				<contextaction name="openTags"/>
				<groupactions name="websitecreate_">
					<contextaction name="createPage"/>
					<contextaction name="createTopic"/>
					<contextaction name="createExternalPage"/>
					<contextaction name="initDefaultStruct"/>
				</groupactions>
				<contextaction name="openTreeNodeOrder"/>
				<contextaction name="openFolder"/>
			</contextactions>
		</model>		
		<model name="modules_website/topic">
			<children>
				<child model="modules_website/page"/>
				<child model="modules_website/pagegroup"/>
				<child model="modules_website/pagereference"/>
				<child model="modules_website/topic"/>
				<child model="modules_website/systemtopic"/>
				<child model="modules_website/pageexternal"/>
			</children>
			<drops>
				<drop model="modules_website/page" action="move"/>
				<drop model="modules_website/pagegroup" action="move"/>
				<drop model="modules_website/topic" action="move"/>
				<drop model="modules_website/pageexternal" action="move"/>
			</drops>
			<styles properties="toolbartype isHomePage isIndexPage visibility notindexable block"/>
			<columns>
				<column name="modificationdate" label="Modificationdate" flex="1"/>
			</columns>
			<contextactions>
				<contextaction name="edit"/>
				<contextaction name="delete"/>
				<groupactions name="topiccreate_">
					<contextaction name="createTopic"/>
					<contextaction name="createPage"/>
					<contextaction name="createExternalPage"/>
				</groupactions>
				<contextaction name="openTreeNodeOrder"/>
				<contextaction name="removeFromMenu"/>
				<contextaction name="openFolder"/>
			</contextactions>
		</model>
		<model name="modules_website/systemtopic">
			<children>
				<child model="modules_website/page"/>
				<child model="modules_website/pagegroup"/>
				<child model="modules_website/pagereference"/>
				<child model="modules_website/systemtopic"/>
				<child model="modules_website/pageexternal"/>
				<child model="modules_website/topic"/>
			</children>
			<drops>
				<drop model="modules_website/page" action="move"/>
				<drop model="modules_website/pagegroup" action="move"/>
				<drop model="modules_website/pageexternal" action="move"/>
				<drop model="modules_website/topic" action="move"/>
			</drops>
			<styles properties="toolbartype isHomePage isIndexPage visibility notindexable block"/>
			<columns>
				<column name="modificationdate" label="Modificationdate" flex="1"/>
			</columns>
			<contextactions>
				<contextaction name="edit"/>
				<groupactions name="systemtopiccreate_">
					<contextaction name="createTopic"/>
					<contextaction name="createPage"/>
					<contextaction name="createExternalPage"/>
				</groupactions>
				<contextaction name="openTreeNodeOrder"/>
				<contextaction name="removeFromMenu"/>
				<contextaction name="openFolder"/>
			</contextactions>
		</model>
		<model name="modules_website/page">
			<contextactions>
				<contextaction name="edit"/>
				<contextaction name="duplicate"/>
				<contextaction name="delete"/>
				<contextaction name="openPage"/>
				<contextaction name="editPageContent"/>
				<contextaction name="setAsIndexPage"/>
				<contextaction name="removeIndexPage"/>
				<contextaction name="setAsHomePage"/>
				<contextaction name="openTags"/>
				<contextaction name="activate"/>	
				<contextaction name="deactivated"/>
				<contextaction name="reactivate"/>
				<contextaction name="createEmptyPageVersionFromPage"/>
				<contextaction name="createPageVersionFromPage"/>
				<contextaction name="openUrlRewritingPanel"/>
				<contextaction name="removeFromMenu"/>
			</contextactions>
		</model>
		<model name="modules_website/pagereference">
			<contextactions>
				<contextaction name="edit"/>
				<contextaction name="openPage"/>
				<contextaction name="setAsIndexPage"/>
				<contextaction name="removeIndexPage"/>
			</contextactions>
		</model>
		<model name="modules_website/pagegroup">
			<styles properties="toolbartype isHomePage isIndexPage visibility notindexable block"/>
			<columns>
				<column name="modificationdate" label="Modificationdate" flex="1"/>
			</columns>
			<contextactions>
				<contextaction name="edit"/>
				<contextaction name="delete"/>
				<contextaction name="setAsIndexPage"/>
				<contextaction name="removeIndexPage"/>
				<contextaction name="setAsHomePage"/>
				<contextaction name="openTags"/>
				<contextaction name="openPage"/>
				<contextaction name="openUrlRewritingPanel"/>
				<contextaction name="removeFromMenu"/>
			</contextactions>
		</model>
		<model name="modules_website/pageversion">
			<contextactions>
				<contextaction name="edit"/>
				<contextaction name="openPage"/>
				<contextaction name="editPageContent"/>
				<contextaction name="activate"/>
				<contextaction name="deactivated"/>
				<contextaction name="reactivate"/>
				<contextaction name="createEmptyPageVersionFromPage"/>
				<contextaction name="createPageVersionFromPage"/>
			</contextactions>
		</model>
		<model name="modules_website/pageexternal">
			<contextactions>
				<contextaction name="edit"/>
				<contextaction name="openTags"/>
				<contextaction name="openPage"/>
				<contextaction name="removeFromMenu"/>
			</contextactions>
		</model>
		<model name="modules_website/markerfolder">
			<contextactions>
				<contextaction name="edit"/>
			</contextactions>
		</model>
		<model name="modules_website/menufolder">
			<children>
				<child model="modules_website/menu"/>
			</children>
			<styles properties="toolbartype isHomePage isIndexPage visibility notindexable block"/>
			<columns>
				<column name="tagLabel" label="Menu-tag" flex="2"/>
				<column name="modificationdate" label="Modificationdate" flex="1"/>
			</columns>
			<contextactions>
				<contextaction name="openFolder"/>
				<contextaction name="createMenu"/>
			</contextactions>
		</model>		
		<model name="modules_website/menu">
			<children>
				<child model="modules_website/menuitemdocument" from="menuItem" />
				<child model="modules_website/menuitemfunction" from="menuItem" />
				<child model="modules_website/menuitemtext" from="menuItem" />
			</children>
			<drops>
				<drop model="modules_website/page" action="addToMenu"/>
				<drop model="modules_website/topic" action="addToMenu"/>
				<drop model="modules_website/systemtopic" action="addToMenu"/>
				<drop model="modules_website/pagegroup" action="addToMenu"/>
				<drop model="modules_website/pageexternal" action="addToMenu"/>
			</drops>
			<styles properties="toolbartype isHomePage isIndexPage visibility notindexable block"/>
			<columns>
				<column name="refers-to" label="Menuitem-refers-to" flex="5"/>
				<column name="popup" label="Menuitem-popup" flex="1"/>
				<column name="modificationdate" label="Modificationdate" flex="1"/>
			</columns>
			<contextactions>
				<contextaction name="edit"/>
				<contextaction name="delete"/>
				<contextaction name="openTags"/>
				<contextaction name="orderMenuItems"/>
				<groupactions name="menucreate_">
					<contextaction name="createMenuitemfunction"/>
					<contextaction name="createMenuitemtext"/>
					<contextaction name="createMenuitemdocument"/>
				</groupactions>
				<contextaction name="openFolder"/>
			</contextactions>
		</model>
		<model name="modules_website/menuitemdocument">
			<contextactions>
				<contextaction name="edit"/>
				<contextaction name="delete"/>
			</contextactions>
		</model>
		<model name="modules_website/menuitemfunction">
			<contextactions>
				<contextaction name="edit"/>
				<contextaction name="delete"/>
				<contextaction name="deactivated"/>
				<contextaction name="reactivate"/>
			</contextactions>
		</model>
		<model name="modules_website/menuitemtext">
			<contextactions>
				<contextaction name="edit"/>
				<contextaction name="delete"/>
			</contextactions>
		</model>
		<model name="modules_generic/systemfolder">
			<children>
				<child model="modules_website/template" />
			</children>
			<contextactions>
				<contextaction name="openFolder"/>
			</contextactions>
		</model>
		<model name="modules_website/template">
			<contextactions>
				<contextaction name="edit"/>
				<contextaction name="delete" />
			</contextactions>
		</model>
	</models>
	<toolbar>
		<toolbarbutton name="edit"/>
		<toolbarbutton name="duplicate"/>	
		<toolbarbutton name="delete"/>
		<toolbarbutton name="activate"/>
		<toolbarbutton name="deactivated"/>
		<toolbarbutton name="reactivate"/>
		<toolbarbutton name="editPageContent"/>
		<toolbarbutton name="openPage"/>
	</toolbar>
	<actions>
		<action name="refresh" single="true" icon="refresh" label="&amp;modules.uixul.bo.actions.Refresh;"/>
		<action name="delete" permission="Delete" icon="delete" label="&amp;modules.uixul.bo.actions.Delete;"/>
		<action name="edit" single="true" permission="Load" icon="edit" label="&amp;modules.uixul.bo.actions.Edit;"/>
		<action name="openFolder" single="true" icon="open-folder" label="&amp;modules.uixul.bo.actions.OpenFolder;"/>
		<action name="createPage" single="true" permission="Insert_page" group="topiccreate_" icon="add" label="&amp;modules.website.bo.actions.Create-page;"/>
		<action name="createExternalPage" single="true" permission="Insert_pageexternal" group="topiccreate_" icon="add" label="&amp;modules.website.bo.actions.Create-external-page;"/>
		<action name="topiccreate_" single="true" actions="createPage,createTopic,createExternalPage" icon="add"/>
		<action name="systemtopiccreate_" single="true" actions="createPage,createExternalPage" icon="add"/>
		<action name="createTopic" single="true" permission="Insert_topic" group="topiccreate_" icon="add" label="&amp;modules.website.bo.actions.Create-topic;"/>
		<action name="openTreeNodeOrder" single="true" permission="Order" icon="sort" label="&amp;modules.uixul.bo.actions.Set-children-order;"/>
		<action name="move" permission="Move" icon="up_down" label="&amp;modules.uixul.bo.actions.Move;"/>
		<action name="openTags" single="true" permission="LoadTags" icon="edit-tags" label="&amp;modules.uixul.bo.actions.Open-tags-panel;"/>
		<action name="createMenu" single="true" permission="Insert_menu" icon="add" label="&amp;modules.website.bo.actions.Create-menu;"/>
		<action name="orderMenuItems" single="true" icon="sort" label="&amp;modules.uixul.bo.actions.Set-children-order;"/>
		<action name="menucreate_" single="true" actions="createMenuitemfunction,createMenuitemtext,createMenuitemdocument" icon="add"/>
		<action name="createMenuitemfunction" single="true" permission="Insert_menuitemfunction" group="menucreate_" label="&amp;modules.website.bo.actions.Create-Menuitemfunction;"/>
		<action name="createMenuitemtext" single="true" permission="Insert_menuitemtext" group="menucreate_" label="&amp;modules.website.bo.actions.Create-Menuitemtext;"/>
		<action name="createMenuitemdocument" single="true" permission="Insert_menuitemdocument" group="menucreate_" label="&amp;modules.website.bo.actions.Create-Menuitemdocument;"/>
		<action name="addToMenu" permission="AddToMenu" icon="add" label="&amp;modules.website.bo.actions.Add-to-menu;"/>
		<action name="websitecreate_" single="true" actions="createPage,createTopic,createExternalPage,initDefaultStruct" icon="add"/>
		<action name="initDefaultStruct" single="true" permission="InitDefaultStruct" group="websitecreate_" icon="add" label="&amp;modules.website.bo.actions.Init-default-struct;"/>
		<action name="duplicate" single="true" permission="Duplicate" icon="duplicate" label="&amp;modules.uixul.bo.actions.Duplicate;"/>
		<action name="openPage" single="true" icon="preview" label="&amp;modules.website.bo.actions.OpenPage;"/>
		<action name="editPageContent" single="true" permission="EditContent" icon="edit-page-content" label="&amp;modules.website.bo.actions.EditContent;"/>
		<action name="setAsIndexPage" single="true" permission="SetTopicIndexPage" icon="page-index" label="&amp;modules.website.bo.actions.Set-as-index-page;"/>
		<action name="removeIndexPage" single="true" permission="RemoveIndexPage" icon="document" label="&amp;modules.website.bo.actions.Remove-index-page;"/>
		<action name="setAsHomePage" single="true" permission="SetHomePage" icon="page-home" label="&amp;modules.website.bo.actions.Set-as-home-page;"/>
		<action name="activate" single="true" permission="Activate" icon="activate" label="&amp;modules.uixul.bo.actions.Activate;"/>
		<action name="deactivated" permission="Deactivated" icon="deactivated" label="&amp;modules.uixul.bo.actions.Deactivate;"/>
		<action name="reactivate" permission="ReActivate" icon="reactivate" label="&amp;modules.uixul.bo.actions.ReActivate;"/>
		<action name="createEmptyPageVersionFromPage" single="true" permission="InitEmptyPageVersion" icon="new-empty-version" label="&amp;modules.website.bo.actions.Create-empty-page-version;"/>
		<action name="createPageVersionFromPage" single="true" permission="InitDuplicatePageVersion" icon="new-version" label="&amp;modules.website.bo.actions.Create-page-version;"/>
		<action name="openUrlRewritingPanel" single="true" permission="LoadRedirectInfo" icon="urlrewriting" label="&amp;modules.uixul.bo.actions.Url-rewriting;"/>
		<action name="removeFromMenu" single="true" permission="RemoveFromMenu" icon="remove" label="&amp;modules.website.bo.actions.Remove-from-menu;"/>
		<action name="createWebsite" single="true" permission="Insert_website" icon="add" label="&amp;modules.website.bo.actions.Create-website;"/>
		<action name="checkLink" global="true" permission="CheckLink" icon="check" label="&amp;modules.website.bo.actions.Check-link;"/>
	</actions>
</perspective>